<%# A list of all transactions created by logged-in user is displayed (sorted by most recent).%>
<%= render partial: '/projects/navbar'%>

<h1 class= "text-center">Total hours : <%= @projects.sum(:hours)%></h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Icon</th>
      <th scope="col">Project Title</th>
      <th scope="col">Hrs</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
  <% @projects.each do |project|%>
    <tr>
      <th scope="row"><%=%></th>
      <td><i class="fas fa-couch"></i></td>
      <td><%= project.title%></td>
      <td><%= project.hours%></td>
      <td><%= project.created_at.strftime("%a-%d-%Y")%></td>
    </tr>
   <%end%>
  </tbody>
</table>

  <div class=" text-center" >
      <%= link_to "Add New Project ", new_project_path, class: "btn btn-outline-primary "%>
      <%= link_to "Back", "#", class: "btn btn-outline-success "%>
  </div>



