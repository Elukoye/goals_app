<%= render partial: '/projects/navbar'%>

<h5 class ="font-weight-bold  text-center">Create a New Project:</h5>

<%= form_for @category do |f|%>
     <div class="field">
        <%= f.label :title, class: "col-sm-2 col-form-label font-weight-bold" %>
        <%= f.text_field :title, class: "form-control", placeholder: "Project Title" %>
    </div>

    <div class="field">
        <%= f.label :hours, class: "col-sm-2 col-form-label font-weight-bold" %>
        <%= f.text_field :hours, class: "form-control", placeholder: "Hours clocked" %>
    </div>

     <div class="actions">
        <%= f.submit class: "btn btn-outline-primary " %>
    </div>
<%end%>
<%= link_to " Add Category", new_category_path, class: "nav-links"%>