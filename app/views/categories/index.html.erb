
<%= render 'projects/navbar'%>
<h1 class= "text-center">Categories created : <%= @categories.count%></h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Category Name</th>
      <th scope="col">Icon</th>
      <th scope="col">Created</th>
    </tr>
  </thead>
  <tbody>
<% @categories.each do |c|%>
    <tr>
      <th scope="row"><%=%></th>
    
      <td><%= c.name%></td>
      <td><%= c.icon%></td>
      <td><%= c.created_at.strftime("%a-%d-%Y")%></td>
    </tr>
   <%end%>
  </tbody>
</table>

  <div class=" text-center" >
      <%= link_to "Add New Project ", new_project_path, class: "btn btn-outline-primary "%>
      <%= link_to "Back", new_project_path, class: "btn btn-outline-success "%>
  </div>



