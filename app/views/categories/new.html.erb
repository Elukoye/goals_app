<%= render partial: '/projects/navbar'%>

<h5 class ="font-weight-bold  text-center">Create a Category:</h5>

<%= form_with(model: @category, local: true) do |f| %>
     <div class="field">
        <%= f.label :name, class: "col-sm-2 col-form-label font-weight-bold" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Category" %>
    </div>

    <div class="field">
      <%= f.label :icon, class: "" %>
      <%= f.select(:icon, options_for_select([ [":))"],
                                               [";}}"],
                                               ["&&"],
                                               ["##"],
                                               ["@@"],
                                               ["++"],
                                               ["%%"],
                                               ["!!"],
                                               ["**"]])) %>
    </div>

     <div class="actions">
        <%= f.submit class: "btn btn-outline-primary " %>
    </div>
<%end%>
